<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_cell"
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:transitionName="@string/app_name"
        android:background="@drawable/cell_bg" >

        <RelativeLayout
            android:id="@+id/rel_top"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_store"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/store_icon"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/img_store"
                android:text=""
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/rel_top"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" >

            <ImageView
                android:id="@+id/img_storediff"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:background="@drawable/homepage_load_img"
                android:contentDescription="TODO" />

            <ImageView
                android:id="@+id/img_featured"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-10dp"
                android:contentDescription="TODO" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_bottom"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/bottom_text_bg" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="25dp"
                android:id="@+id/relativeLayout">

                <RatingBar
                    android:id="@+id/rate1"
                    style="@style/foodRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8" />

                <TextView
                    android:id="@+id/txt_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="5dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="italic" />
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:layout_above="@+id/relativeLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/img_address"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/address_icon"
                    android:contentDescription="TODO" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:lines="1"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/img_address"
                    android:layout_toEndOf="@+id/img_address"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>