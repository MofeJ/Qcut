<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:transitionName="@string/app_name"
    tools:context="freaktemplate.store3.Detailpage" >

    <RelativeLayout
        android:id="@+id/rel_info"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/tableLayout" >

            <RelativeLayout
                android:id="@+id/rel_scroll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/rel_image"
                    android:layout_width="fill_parent"
                    android:layout_height="180dp" >

                    <android.support.v4.view.ViewPager
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/detail_page_loadimg">
                    </android.support.v4.view.ViewPager>

                    <com.github.ivbaranov.mfb.MaterialFavoriteButton
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/fav"
                        app:mfb_bounce_duration="1000"
                        app:mfb_animate_favorite="true"
                        app:mfb_animate_unfavorite="true"
                        app:mfb_favorite_image="@drawable/favorite_btn"
                        app:mfb_not_favorite_image="@drawable/unfavorite_btn"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_address"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/rel_image"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:id="@+id/img_add"
                        android:layout_width="fill_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/address_bg"
                        android:contentDescription="TODO" />

                    <LinearLayout
                        android:id="@+id/ll_availableat"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/img_loc"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/address_icon"
                            android:contentDescription="TODO" />

                        <TextView
                            android:id="@+id/txt_avail"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="4dp"
                            android:gravity="center"
                            android:text="@string/txt_availableat"
                            android:textColor="#fff"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_border"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/ll_availableat"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/line"
                        android:contentDescription="TODO" />

                    <TextView
                        android:id="@+id/txt_add"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_below="@+id/img_border"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:lines="1"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/img_call"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_below="@+id/txt_add"
                            android:background="@drawable/phone_icon"
                            android:contentDescription="TODO" />

                        <TextView
                            android:id="@+id/txt_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"
                            android:text=""
                            android:textColor="#fff"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_rating"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/rel_address" >

                    <TextView
                        android:id="@+id/txt_totalreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="@string/txt_totoal_review"
                        android:textColor="#018161" />

                    <RatingBar
                        android:id="@+id/rate1"
                        style="@style/foodRatingBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:isIndicator="true"
                        android:scaleX="0.8"
                        android:scaleY="0.8" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_map"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/rl_rating"
                    android:orientation="vertical" >

                    <fragment
                        android:id="@+id/mapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        class="com.google.android.gms.maps.SupportMapFragment" />
                </LinearLayout>

                

                <RelativeLayout
                    android:id="@+id/rl_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_map"
                    android:layout_marginTop="3dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/txt_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="14sp" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/rel_header"
            android:layout_width="fill_parent"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/img_header"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/topbar_bg"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/txt_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Restaurant"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_fvrt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:background="@drawable/favorite_btn" />

            <Button
                android:id="@+id/btn_fvrt1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:background="@drawable/unfavorite_btn" />
        </RelativeLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:stretchColumns="0,1,2,3,4,5" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center" >

                <LinearLayout
                    android:id="@+id/ll_aboutus"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_video"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/teliphone_btn" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_instruction"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_map"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/distance_btn" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_more"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:gravity="bottom|center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_share"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/share_btn" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rate"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_column="3"
                    android:gravity="bottom|center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_book"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/mail_btn" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rates"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_column="3"
                    android:gravity="bottom|center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_web"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/website_btn" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rate1"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_column="3"
                    android:gravity="bottom|center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_review"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rate_btn" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:id="@+id/rl_infodialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>